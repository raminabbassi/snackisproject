@page
@model SnackisUppgift.Pages.Admin.PostAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        html, * {
            color: aqua;
        }
        body {
            background-image: url('/Backgroundimages/Chattbild.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            color: aqua; 
        }

        .blurry-background::before {
            content: "";
            display: block;
            position: fixed;
            z-index: -1;
            width: 100%;
            height: 100%;
            background: inherit;
            filter: blur(5px);
            transform: scale(1.1);
        }
    </style>
</head>
<body class="blurry-background">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                @*                <th>
                @Html.DisplayNameFor(model => model.Post[0].Likes)
                </th>*@
                @*               <th>
                @Html.DisplayNameFor(model => model.Post[0].Comments)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Description)
                </th>
                @*                <th>
                @Html.DisplayNameFor(model => model.Post[0].Subject)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Reports)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Post)
            {
                <tr>
                    @*                <td>
                @Html.DisplayFor(modelItem => item.Likes)
                </td>*@
                    @*                <td>
                @Html.DisplayFor(modelItem => item.Comments)
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    @*                <td>
                @Html.DisplayFor(modelItem => item.Subject.Category)
                (@Html.DisplayFor(modelItem => item.Subject.Id))
                </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reports)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
