@page
@model SnackisUppgift.Pages.ReplyModel
<head>
    <style>
        body {
            background-image: url('/Backgroundimages/Chattbild.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .blurry-background::before {
            content: "";
            display: block;
            position: fixed;
            z-index: -1;
            width: 100%;
            height: 100%;
            background: inherit;
            filter: blur(5px);
            transform: scale(1.1);
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #F0F0F0;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px #888;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        h1 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 1rem;
            text-align: center;
        }

        p {
            margin-bottom: 1rem;
            line-height: 1.6;
            color: #333;
        }

        #replyContent {
            height: 150px;
            resize: vertical;
        }

        .btn-primary {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
            width: 100%;
            padding: 10px;
            font-size: 18px;
            border-radius: 5px;
        }

        label {
            font-weight: bold;
            color: #666;
            display: block;
            margin-bottom: 5px;
        }

        input, textarea {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            box-sizing: border-box;
        }

        #email {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Reply to Message</h1>

        <form method="post">
            <input type="hidden" asp-for="OriginalMessage.Id" />
            <input type="hidden" id="email" name="email" class="form-control" asp-for="OriginalMessage.Sender.Email">
            <div class="form-group">
                <label for="replyContent">Your Reply</label>
                <textarea id="replyContent" name="replyContent" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Reply</button>
        </form>

        <p>@Model.OriginalMessage.Message</p>
    </div>
</body>